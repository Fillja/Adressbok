<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Adressbok.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Adressbok.Maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Adressbok.Maui">

    <ShellContent Title="Contact List" ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
    <ShellContent Title="Add To List" ContentTemplate="{DataTemplate views:AddPage}" Route="AddPage" />
    <ShellContent Title="Edit List" ContentTemplate="{DataTemplate views:EditPage}" Route="EditPage" />

</Shell>
